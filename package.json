{
  "name": "express-websocket-template",
  "version": "0.0.1",
  "description": "Express.js - WebSocket - Template",
  "main": "dist/server.js",
  "repository": "git@github.com:houseoftypescript/express-template.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "GNU GPL 3.0",
  "private": true,
  "engines": {
    "node": "20.1.0",
    "npm": "9.6.6",
    "yarn": "1.22.19"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "start": "node .",
    "start:dev": "kill-port 8080 && concurrently \"nodemon\" \"nodemon -x yarn docs\"",
    "start:prod": "node .",
    "docs": "yarn docs:swagger:json && yarn docs:swagger:yaml",
    "docs:swagger:json": "tsoa spec-and-routes",
    "docs:swagger:yaml": "json2yaml ./docs/swagger/swagger.json > ./docs/swagger/swagger.yaml",
    "lint": "eslint . --fix --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest.config.ts",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "axios": "1.4.0",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "http-errors": "2.0.0",
    "pino": "8.14.1",
    "pino-pretty": "10.0.0",
    "socket.io": "4.6.1",
    "tsoa": "5.1.1"
  },
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/http-errors": "2.0.1",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.6",
    "@types/supertest": "2.0.12",
    "@types/webpack-node-externals": "3.0.0",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "eslint": "8.40.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "json2yaml": "1.1.0",
    "kill-port": "2.0.1",
    "nodemon": "2.0.22",
    "prettier": "2.8.8",
    "pretty-quick": "3.1.3",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "typescript": "5.0.4",
    "webpack": "5.82.0",
    "webpack-cli": "5.1.1",
    "webpack-node-externals": "3.0.0"
  }
}
